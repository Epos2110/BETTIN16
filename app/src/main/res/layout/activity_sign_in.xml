<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="64dp"
    android:paddingRight="64dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    tools:context="com.example.epos.bettin16.SignInActivity">

    <EditText
        android:id="@+id/sign_in_username_et"
        android:hint="Podaj login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_account_tv"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp" />

    <EditText
        android:id="@+id/sign_in_password_et"
        android:hint="Podaj hasło"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_in_username_et"
        android:layout_alignParentEnd="true" />
    <Button
        android:id="@+id/sign_in_button"
        android:text="Zaloguj się"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_in_password_et"
        android:layout_alignParentEnd="true" />"
        android:layout_below="@+id/create_account_tv" />

    <Button
        android:id="@+id/create_account_tv"
        android:text="@string/create_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>